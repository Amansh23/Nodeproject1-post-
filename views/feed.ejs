<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div id="head">        
    <h1 id="allposts">All Posts</h1>
    <div id="profilebtn"><a href="/profile"> Profile </a></div>
    </div>
    <div id="posts">
        <% foundpost.forEach(function(posts){ %>
          <div id="box2">
              <h3> <%= posts.post %></h3>
              <h4><%= posts.likes.length %> Likes</h4>
              <a href="/likes/<%= posts._id %>"> 
                <%= `${(posts.likes.indexOf(data._id)=== -1)?"Like":"DisLike"}`%>

              </a>

                <div id="commentbox">
                  <% posts.comments.forEach(function(c){ %>
                      <h2><%= c.name %></h2>
                      <h3><%= c.comment %></h3>
                     
                 <%   }) %>
                 
                </div>
               

              <form action="/comment/<%= posts._id %>" method="post">
                <div class="form-floating" >
                    <textarea class="form-control" name="comment" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                    <label for="floatingTextarea">Comments</label>
                  </div>
                  <input id="input" name="" type="submit" value=" Comment">
              </form>
           </div>
    
         <% }) %>
        </div>
</body>
</html>